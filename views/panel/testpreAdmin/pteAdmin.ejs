  <script>
    document.addEventListener('DOMContentLoaded', function () {
      // PTE Search Functionality
      const pteSearchInput = document.getElementById('pteSearchInput');
      const clearPteSearchBtn = document.getElementById('clearPteSearchBtn');
      const pteEnquiryTableBody = document.getElementById('pteEnquiryTableBody');
      const pteNoResultsMessage = document.getElementById('pteNoResultsMessage');
      const pteNoDataRow = document.getElementById('pteNoDataRow');
      const pteEnquiryRows = document.querySelectorAll('.pte-enquiry-row');

      // Debounce function to limit how often the search executes
      function debounce(func, wait) {
        let timeout;
        return function () {
          const context = this, args = arguments;
          clearTimeout(timeout);
          timeout = setTimeout(() => {
            func.apply(context, args);
          }, wait);
        };
      }

      function filterPteTable() {
        const searchTerm = pteSearchInput.value.toLowerCase().trim();
        let hasMatches = false;

        // If no search term, show all rows
        if (!searchTerm) {
          pteEnquiryRows.forEach(row => row.style.display = '');
          pteNoResultsMessage.style.display = 'none';
          if (pteNoDataRow && pteEnquiryRows.length === 0) {
            pteNoDataRow.style.display = '';
          }
          return;
        }

        // Search through each row
        pteEnquiryRows.forEach(row => {
          const rowText = row.textContent.toLowerCase();
          if (rowText.includes(searchTerm)) {
            row.style.display = '';
            hasMatches = true;
          } else {
            row.style.display = 'none';
          }
        });

        // Show appropriate messages
        if (pteNoDataRow) pteNoDataRow.style.display = 'none';
        pteNoResultsMessage.style.display = hasMatches ? 'none' : 'block';
      }

      // Debounced version of the filter function
      const debouncedFilter = debounce(filterPteTable, 300);

      // Event listeners for PTE table
      pteSearchInput.addEventListener('input', debouncedFilter);

      clearPteSearchBtn.addEventListener('click', function () {
        pteSearchInput.value = '';
        filterPteTable();
        pteSearchInput.focus();
      });

      // Initialize
      filterPteTable();
    });
  </script>

