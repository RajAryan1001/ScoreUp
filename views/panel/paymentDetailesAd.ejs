  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Payment Details Search Functionality
      const paymentSearchInput = document.getElementById('paymentSearchInput');
      const clearPaymentSearchBtn = document.getElementById('clearPaymentSearchBtn');
      const paymentsTableBody = document.getElementById('paymentsTableBody');
      const paymentNoResultsMessage = document.getElementById('paymentNoResultsMessage');
      const paymentNoDataRow = document.getElementById('paymentNoDataRow');
      const paymentRows = document.querySelectorAll('.payment-row');
    
      function filterPaymentTable() {
        const searchTerm = paymentSearchInput.value.toLowerCase().trim();
        let hasMatches = false;
    
        // If no search term, show all rows
        if (!searchTerm) {
          paymentRows.forEach(row => row.style.display = '');
          paymentNoResultsMessage.style.display = 'none';
          if (paymentNoDataRow && paymentRows.length === 0) {
            paymentNoDataRow.style.display = '';
          }
          return;
        }
    
        // Search through each row
        paymentRows.forEach(row => {
          const rowText = row.textContent.toLowerCase();
          if (rowText.includes(searchTerm)) {
            row.style.display = '';
            hasMatches = true;
          } else {
            row.style.display = 'none';
          }
        });
    
        // Show appropriate messages
        if (paymentNoDataRow) paymentNoDataRow.style.display = 'none';
        paymentNoResultsMessage.style.display = hasMatches ? 'none' : 'block';
      }
    
      // Event listeners
      paymentSearchInput.addEventListener('input', filterPaymentTable);
      
      clearPaymentSearchBtn.addEventListener('click', function() {
        paymentSearchInput.value = '';
        filterPaymentTable();
        paymentSearchInput.focus();
      });
    
      // Initialize
      filterPaymentTable();
    });
    </script>

