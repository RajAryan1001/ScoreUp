  font-size: 0.9rem;
  padding: 0 15px 10px;
  margin: 0;
  flex-grow: 1; /* Pushes button to bottom */
}

/* Video Element Styling */
.video-card video {
  width: 100%;
  height: auto;
  aspect-ratio: 16/9;
  background: #000;
  display: block;
}

/* Delete Button Styling */
.video-card form {
