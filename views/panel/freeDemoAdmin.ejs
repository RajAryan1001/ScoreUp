  <script>

    document.addEventListener('DOMContentLoaded', function () {
      const videoSearchInput = document.getElementById('videoSearchInput');
      const clearVideoSearchBtn = document.getElementById('clearVideoSearchBtn');
      const videoCards = document.querySelectorAll('.video-card');
      const noVideoResults = document.getElementById('noVideoResults');
      const videoGrid = document.getElementById('videoGrid');

      function filterVideos() {
        const searchTerm = videoSearchInput.value.toLowerCase().trim();
        let hasMatches = false;

        if (!searchTerm) {
          videoCards.forEach(card => card.style.display = '');
          noVideoResults.style.display = 'none';
          return;
        }

        videoCards.forEach(card => {
          const examType = card.getAttribute('data-exam-type');
          const description = card.getAttribute('data-description');

          if (examType.includes(searchTerm) || description.includes(searchTerm)) {
            card.style.display = '';
            hasMatches = true;
          } else {
            card.style.display = 'none';
          }
        });

        noVideoResults.style.display = hasMatches ? 'none' : 'block';
      }

      // Event listeners
      videoSearchInput.addEventListener('input', function () {
        filterVideos();
      });

      clearVideoSearchBtn.addEventListener('click', function () {
        videoSearchInput.value = '';
        filterVideos();
        videoSearchInput.focus();
      });

      // Initialize
      filterVideos();
    });
  </script>

