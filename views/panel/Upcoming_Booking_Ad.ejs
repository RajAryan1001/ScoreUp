    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Booking Search Functionality
            const bookingSearchInput = document.getElementById('bookingSearchInput');
            const clearBookingSearchBtn = document.getElementById('clearBookingSearchBtn');
            const bookingTableBody = document.getElementById('bookingTableBody');
            const bookingNoResultsMessage = document.getElementById('bookingNoResultsMessage');
            const bookingNoDataRow = document.getElementById('bookingNoDataRow');
            const bookingRows = document.querySelectorAll('.booking-row');

            function filterBookingTable() {
                const searchTerm = bookingSearchInput.value.toLowerCase().trim();
                let hasMatches = false;

                // If no search term, show all rows
                if (!searchTerm) {
                    bookingRows.forEach(row => row.style.display = '');
                    bookingNoResultsMessage.style.display = 'none';
                    if (bookingNoDataRow && bookingRows.length === 0) {
                        bookingNoDataRow.style.display = '';
                    }
                    return;
                }

                // Search through each row
                bookingRows.forEach(row => {
                    const rowText = row.textContent.toLowerCase();
                    if (rowText.includes(searchTerm)) {
                        row.style.display = '';
                        hasMatches = true;
                    } else {
                        row.style.display = 'none';
                    }
                });

                // Show appropriate messages
                if (bookingNoDataRow) bookingNoDataRow.style.display = 'none';
                bookingNoResultsMessage.style.display = hasMatches ? 'none' : 'block';
            }

            // Event listeners for Booking table
            bookingSearchInput.addEventListener('input', function () {
                filterBookingTable();
            });

            clearBookingSearchBtn.addEventListener('click', function () {
                bookingSearchInput.value = '';
                filterBookingTable();
                bookingSearchInput.focus();
            });

            // Initialize
            filterBookingTable();
        });
    </script>

