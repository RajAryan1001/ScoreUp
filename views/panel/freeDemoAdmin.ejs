    /* Card Styles */
    .card {
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      padding: 30px;
      width: 100%;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
      transform: translateY(-10px);
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
    }

    .card-title {
      font-size: 1.8rem;
      font-weight: 700;
      color: #6a1b9a;
      /* Purple */
      margin-bottom: 20px;
      text-align: center;
    }

    /* Form Styles */
    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      font-size: 1rem;
      font-weight: 600;
      color: #333;
      margin-bottom: 8px;
      display: block;
    }

    .form-control {
      width: 100%;
      padding: 12px;
      border: 2px solid #e0e0e0;
      border-radius: 10px;
      font-size: 1rem;
      color: #333;
      transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .form-control:focus {
      border-color: #6a1b9a;
      /* Purple */
      box-shadow: 0 0 0 3px rgba(106, 27, 154, 0.1);
      outline: none;
    }

    textarea.form-control {
      resize: vertical;
      min-height: 100px;
    }

    /* Custom File Input */
    .custom-file {
      position: relative;
      display: inline-block;
      width: 100%;
    }

    .custom-file-input {
      width: 100%;
      height: 100%;
      opacity: 0;
      position: absolute;
      top: 0;
      left: 0;
      cursor: pointer;
    }

    .custom-file-label {
      width: 100%;
      padding: 12px;
      border: 2px solid #e0e0e0;
      border-radius: 10px;
      background: #fff;
      font-size: 1rem;
      color: #333;
      text-align: left;
      cursor: pointer;
      transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .custom-file-input:focus~.custom-file-label {
      border-color: #6a1b9a;
      /* Purple */
      box-shadow: 0 0 0 3px rgba(106, 27, 154, 0.1);
    }

    .custom-file-label::after {
      content: "Browse";
      background: linear-gradient(to right, #da8cff, #9a55ff) !important;
      /* Purple */
      color: #fff;
      padding: 10px 20px;
      border-radius: 8px;
      position: absolute;
      right: 0;
      top: 0;
      bottom: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: background 0.3s ease;
    }

    .custom-file-label:hover::after {
      background: linear-gradient(to right, #da8cff, #9a55ff) !important;
      /* Darker Purple */
    }

    /* Custom Button */
    .custom-button {
      width: 100%;
      padding: 12px;
      background: linear-gradient(to right, #da8cff, #9a55ff) !important;
      ;
      /* Purple */
      color: #fff;
      border: none;
      border-radius: 10px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.3s ease, transform 0.3s ease;
    }

    .custom-button:hover {
      background: linear-gradient(to right, #da8cff, #9a55ff) !important;
      /* Darker Purple */
      transform: translateY(-2px);
    }

    .custom-button:active {
      transform: translateY(0);
    }


    /* Video Grid Container */
.video-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20px;
  justify-content: flex-start;
  align-items: stretch;
  padding: 15px 0;
